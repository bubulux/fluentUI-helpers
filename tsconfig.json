{
  "compilerOptions": {
    // Further linting
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    // Aliases
    "baseUrl": ".",
    "paths": {
      "@animations/*": ["src/animations/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@theme/*": ["src/theme/*"]
    }
  },
  "include": ["src"]
}
